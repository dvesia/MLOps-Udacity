name: download_data
conda_env: conda.yml

entry_points:
  main:
    parameters:
      file_url:
        description: URL of the file to download
        type: uri

       artifact_name:
        description: Name for W&B artifact
        type: str

       artifact_type:
        description: Type for W&B artifact
        type: str

       artifact_description:
        description: Description for W&B artifact
        type: str

    command: >-
        python run.py  --file_url {file_url} \
         -- artifact_name { artifact_name} \
         -- artifact_type { artifact_type} \
         -- artifact_description { artifact_description} 



